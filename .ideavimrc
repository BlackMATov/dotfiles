Plug 'kana/vim-textobj-entire'
Plug 'michaeljsmith/vim-indent-object'

set number
set relativenumber

set scrolloff=4

set clipboard+=unnamedplus

set hlsearch
set ignorecase
set incsearch
set smartcase

set visualbell

let mapleader=" "

imap jk <esc>

nmap n nzz
nmap N Nzz
nmap * *zz
nmap # #zz
nmap g* g*zz
nmap g# g#zz

nmap <esc> :nohl<cr>

nmap <leader>q :q<cr>
nmap <leader>w :w<cr>
nmap <leader>e :e<cr>

nmap <C-k> <C-w>k
nmap <C-j> <C-w>j
nmap <C-h> <C-w>h
nmap <C-l> <C-w>l

nmap <leader>s <C-w>s
nmap <leader>v <C-w>v

vmap < <gv
vmap > >gv

nmap <leader>d "_d
vmap <leader>d "_d
xmap <leader>p "_dP

nmap <leader>ld <C-]>